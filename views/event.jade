.hero-unit
  h1 #{event.name}
  p
    img(src='/event/#{event._id}/image')
  p
    | #{event.description}
  p
    | #{event.date}
  p
    | #{event.time}
  - if (event.host.equals(user._id))
    p
      a.btn(href='/deleteEvent/#{event._id}').btn-primary.btn-large Delete
      form(id='hangout', action='/startEvent/#{event._id}', method='post')
        fieldset(data-role='controlgroup')
          label(for='hangout') Google Hangout
          - if (event.hangout)
            input(id='hangout',name='hangout',type='text',value='#{event.hangout}',placeholder='Hangout Address')
          - else
            input(id='hangout',name='hangout',type='text',value='',placeholder='Hangout Address')
      - if (event.hangout)
        a.btn(href='', onclick='document.forms["hangout"].submit(); return false;').btn-primary.btn-large Update
      - else
        a.btn(href='', onclick='document.forms["hangout"].submit(); return false;').btn-primary.btn-large Start
  - else
    - if (event.attendees.indexOf(user._id) != -1)
      - if (event.hangout)
        p
          a.btn(href='#{event.hangout}', target='new').btn-primary.btn-large Join
    - else
      p
        | Reserve Your Spot for 5 Euros!
      p
        a(href='/attendEvent/#{event._id}')
          img(src='https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif', align='left', style='margin-right:7px;')
    